@model NewMVC.Models.Category

<div class="col-md-6">
    @using (Html.BeginForm("Create", "Categories", FormMethod.Post, new { @class = "form-horizontal" }))
    {
        @Html.ValidationSummary()
        <div class="form-group" hidden>
            <h4>@Html.DisplayNameFor(m => m.Category_ID)</h4>
            @Html.TextBoxFor(m => m.Category_ID, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <h4>@Html.DisplayNameFor(m => m.Category_Name)</h4>
            @Html.TextBoxFor(m => m.Category_Name, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <h4>@Html.DisplayNameFor(m => m.Description)</h4>
            @Html.TextAreaFor(m => m.Description, new { @class = "form-control" })
        </div>
        <input type="submit" class="btn btn-primary" value="Submit" />
    }
</div>


